<h2>Edit Team</h2>
<form action="/teams/<%= @team.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <label for="name">Name: </label>
    <input type="text" name="team[name]" value="<%= @team.name %>" />
    <br>
    <label for="description">Description: </label>
    <input type="textarea" name="team[description]" value="<%= @team.description %>" />
    <br>

    <h3>Existing Characters</h3>
    <% @characters.each do |character| %>
      <input type="checkbox" name="team[character_ids][]" id="<%= character.id %>" value="<%= character.id %>" <%='checked' if @team.characters.include?(character) %>><%= character.name %>
      <br>
    <% end %>
    <br>
    <input type="submit" value="Change" />
</form>