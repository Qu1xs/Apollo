<h1>Sign Up</h1>

<%= "Must include username, email, and password!" if @user && @user.errors.any? %>
<%= @error %>
<form action="/signup" method="POST">
    <label for="name">Username</label>
    <%# create nested hash for data to mass assign %>
    <input type="text" name="user[name]" placeholder="username" required>

    <label for="email">Email</label>
    <input type="text" name="user[email]" placeholder="email@email.com" required>

    <label for="password">Password</label>
    <input type="password" name="user[password]" placeholder="password" required>

    <input type="submit" value="submit">
</form>