<a href="/equips/new" class="create">Create Equipment</a>

<form action="/equips" method="GET">
<input name="query" type="text" class="search">
<input type="submit" value="Search" />
</form>

<%@equips.each do |equip| %>
    <a href="/equips/<%=equip.id%>"><h2><%=equip.name%></h2></a>
    <h4><%= equip.try(:description) %></h4>
<%end%>